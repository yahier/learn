<resources>

    <!-- Base application theme.   <item name="android:windowNoTitle">true</item> -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="act">
        <item name="android:background">@color/theme_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/act_padding</item>
        <item name="android:paddingTop">@dimen/act_padding</item>
        <item name="android:paddingBottom">@dimen/act_padding</item>
        <item name="android:paddingRight">@dimen/act_padding</item>
    </style>


    <style name="item_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="item_edit">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="top_banner_left">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">18dp</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="top_banner_middle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="top_banner_right">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/act_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--更多模块-->
    <style name="more_item_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black_555</item>
    </style>
</resources>
